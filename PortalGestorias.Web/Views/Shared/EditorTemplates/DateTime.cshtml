@model DateTime?
@{
    var formatString = string.IsNullOrEmpty(ViewData.ModelMetadata.EditFormatString) ? "{0:d}" : ViewData.ModelMetadata.EditFormatString;
    var htmlAttributes = ViewData["htmlAttributes"];

}
@Html.TextBox(string.Empty, string.Format(formatString, Model.HasValue ? Model.Value.Date.ToShortDateString() : ""), htmlAttributes)
