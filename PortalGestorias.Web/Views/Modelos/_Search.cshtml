@model  PortalGestorias.Domain.Models.BusquedaModelo

@{

    var action = ViewContext.RouteData.Values["action"].ToString();
    var style = string.Empty;
    if (action.Equals("search", StringComparison.InvariantCultureIgnoreCase))
    {
        style = "extended";
    }
    dynamic htmlAttributes = new { @class = "form-control" };
}
@using (Html.BeginForm("Search", "Modelos", FormMethod.Get))
{
    <fieldset>
        <div class="extended panel-collapse collapse out " id="filtros">
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Importe Desde", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.ImporteDesde, new { htmlAttributes })
                    </div>
                    @Html.Label("Importe Hasta", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.ImporteHasta, new { htmlAttributes })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Marca", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("IdMarca", (SelectList)ViewData["Marca"], (Object)htmlAttributes)
                    </div>
                    @Html.Label("TIpo Modelo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("IdTipoModelo", (SelectList)ViewData["TipoModelo"], (Object)htmlAttributes)
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </fieldset>
}


